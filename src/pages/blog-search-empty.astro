---
import Layout from "@/layouts/Layout.astro";
import EmptySearch from "@components/blocks/EmptySearch.astro";
import CustomControl from "@components/shared/CustomControl.astro";
import Input from "@components/shared/Input.astro";
---

<Layout title="Blog search">
  <main>
    <div class="container-wrapper">
      <section class="section">
        <h1 class="section-title">
          Barcha <span class="title-highlight">maqolalar</span>
        </h1>
        <div class="row mb-40">
          <div class="col-lg-6 col-md-8">
            <div class="flex flex-wrap gap-2">
              <CustomControl type="checkbox" id="some1" name="somename">
                Dizayn
              </CustomControl>
              <CustomControl type="checkbox" id="some2" name="somename">
                O‘qituvchi
              </CustomControl>
              <CustomControl type="checkbox" id="some21" name="somename">
                Abiturient
              </CustomControl>
              <CustomControl type="checkbox" id="some3" name="somename">
                Universitet
              </CustomControl>
              <CustomControl type="checkbox" id="some4" name="somename">
                E‘lonlar
              </CustomControl>
              <CustomControl type="checkbox" id="some5" name="somename">
                Yangiliklar
              </CustomControl>
              <CustomControl type="checkbox" id="some6" name="somename">
                Imtihon
              </CustomControl>
              <CustomControl type="checkbox" id="some7" name="somename">
                Talaba
              </CustomControl>
              <CustomControl type="checkbox" id="some8" name="somename">
                Boshqa
              </CustomControl>
            </div>
          </div>
          <div class="col-lg-6">
            <div class="flex items-end h-full mt-5 lg:mt-0">
              <Input
                name="some"
                id="someid"
                type="text"
                utils="w-full"
                addonAfter="search"
                placeholder="1 321 maqolalar"
              />
            </div>
          </div>
        </div>
        <div class="my-120 py-2">
          <EmptySearch />
        </div>
      </section>
    </div>
  </main>
</Layout>
