---
import Layout from "@/layouts/Layout.astro";
import Button from "@components/shared/Button.astro";
import Post from "@components/sections/Post/Post.astro";
import ContactUs from "@components/sections/Home/ContactUs.astro";
import Features from "@components/sections/Home/Features.astro";
import PostRelated from "@components/sections/Post/PostRelated.astro";
---

<Layout title="Blog">
  <main>
    <div class="container-wrapper">
      <section class="section">
        <div class="row lg:px-0 md:px-120">
          <div class="col-lg-3">
            <Button style="secondary">
              <svg class="icon !w-6 mr-2">
                <use xlink:href="#icon-arrow-left"></use>
              </svg>Barcha maqolalar
            </Button>
          </div>
          <div class="col-lg-6">
            <Post />
          </div>
        </div>
      </section>
      <ContactUs />
      <PostRelated />
    </div>
  </main>
</Layout>
