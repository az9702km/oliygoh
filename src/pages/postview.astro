---
import Layout from "@/layouts/Layout.astro";
import Button from "@components/shared/Button.astro";
import Post from "@components/sections/Post/Post.astro";
import ContactUs from "@components/sections/Home/ContactUs.astro";
import Features from "@components/sections/Home/Features.astro";
import PostRelated from "@components/sections/Post/PostRelated.astro";
---

<Layout title="Blog">
  <main>
    <div class="container-wrapper">
      <section class="section">
        <div class="row">
          <div class="col-md-3">
            <Button style="secondary">
              <svg class="icon !w-6 mr-2">
                <use xlink:href="#icon-arrow-left"></use>
              </svg>Barcha maqolalar
            </Button>
          </div>
          <div class="col-md-6">
            <Post />
          </div>
          <div class="col-md-3">
            <div class="post-share">
              <div class="btn-group btn-group--v post-share__btns">
                <Button
                  style="secondary"
                  form="btn-circle"
                  classes="!p-10 !rounded">
                  <svg class="icon !w-6">
                    <use xlink:href="#icon-telegram"></use>
                  </svg>
                </Button>
                <Button
                  style="secondary"
                  form="btn-circle"
                  classes="!p-10 !rounded">
                  <svg class="icon !w-6">
                    <use xlink:href="#icon-facebook"></use>
                  </svg>
                </Button>
                <Button
                  style="secondary"
                  form="btn-circle"
                  classes="!p-10 !rounded">
                  <svg class="icon !w-6">
                    <use xlink:href="#icon-twitter"></use>
                  </svg>
                </Button>
                <Button
                  style="secondary"
                  form="btn-circle"
                  classes="!p-10 !rounded">
                  <svg class="icon !w-6">
                    <use xlink:href="#icon-link"></use>
                  </svg>
                </Button>
              </div>
            </div>
          </div>
        </div>
      </section>
      <ContactUs />
      <PostRelated />
    </div>
  </main>
</Layout>
