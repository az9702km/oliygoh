---
import CardAdmin from "@components/shared/Cards/CardProfile.astro";
import LayoutAdmin from "../../layouts/LayoutAdmin.astro";
import Button from "@components/shared/Button.astro";
import BalanceTotal from "@components/blocks/BalanceTotal.astro";
---

<LayoutAdmin title="Sertifikatlarim" page="balance">
  <BalanceTotal>
    <Fragment slot="amount">432 000</Fragment>
  </BalanceTotal>
  <CardAdmin classes="card-min-h">
    <table class="table-profile table-profile--balance">
      <thead class="table-profile__head">
        <tr>
          <th></th>
          <th>To‘lov summasi</th>
          <th>To‘lov vaqti</th>
          <th>sabab</th>
        </tr>
      </thead>
      <tbody class="table-profile__body">
        <tr>
          <td>
            <div class="table-profile__icon">
              <svg class="icon">
                <use xlink:href="#icon-receipt-download"></use>
              </svg>
            </div>
          </td>
          <td>
            <div class="dt uppercase">
              <div class="term">432 000 SO‘M</div>
              <div class="desc">kirim</div>
            </div>
          </td>
          <td>
            <div class="dt">
              <div class="term">23-07-2023</div>
              <div class="desc">10:35:32</div>
            </div>
          </td>
          <td>
            <span class="text">Payme</span>
          </td>
        </tr>
      </tbody>
    </table>
  </CardAdmin>
</LayoutAdmin>
