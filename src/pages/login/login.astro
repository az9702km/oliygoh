---
import LayoutLogin from "@/layouts/LayoutLogin.astro";
import Brand from "@components/shared/Brand.astro";
import Button from "@components/shared/Button.astro";
import Input from "@components/shared/Input.astro";
import InputCheck from "@components/shared/InputCheck.astro";
---

<LayoutLogin title="Login">
  <div class="login-form-wrapper">
    <Brand />
    <div class="login-form-wrapper__inner">
      <div class="login-form-wrapper__block">
        <div class="block-card">
          <div class="login-form">
            <div class="login-form__header">
              <h1 class="login-form__title">
                Tizmiga kirish — ma’lumotlaringizni kiriting:
              </h1>
            </div>
            <form class="login-form__form">
              <Input
                placeholder="Telefon raqamingiz"
                type="text"
                addonBefore="phone"
                id="phone-mask"
              />
              <Input
                placeholder="Parolni kiriting"
                type="password"
                addonBefore="lock"
                trailingIcon="hide"
              />
            </form>
            <span class="mb-10">
              Parolni unutdingizmi? <a
                href="/login/"
                class="text-primary underline">Parolni tiklash</a
              >
            </span>
            <a
              role="link"
              aria-disabled="true"
              href="#!"
              class="btn btn-primary btn-center">KIRISH</a
            >
          </div>
        </div>
        <div class="text-center">
          Akkountingiz yo‘qmi? <a href="/login/" class="text-primary underline"
            >Ro‘yxatdan o‘tish</a
          >
          <br />
          <a href="/login/reset-password" class="text-primary underline"
            >Parolni unutdim</a
          >
        </div>
      </div>
    </div>
  </div>
</LayoutLogin>
