---
import LayoutLogin from "@/layouts/LayoutLogin.astro";
import Brand from "@components/shared/Brand.astro";
import Button from "@components/shared/Button.astro";
import Input from "@components/shared/Input.astro";
import InputCheck from "@components/shared/InputCheck.astro";
import Popup from "@components/shared/Popup.astro";
---

<LayoutLogin title="Login">
  <div class="login-form-wrapper">
    <Brand />
    <div class="login-form-wrapper__inner">
      <div class="login-form-wrapper__block">
        <div class="block-card">
          <div class="login-form">
            <div class="login-form__header">
              <h1 class="login-form__title">
                Ro‘yxatdan o‘tish —ma’lumotlaringizni kiriting:
              </h1>
            </div>
            <form class="login-form__form">
              <Input
                placeholder="Familiyangiz"
                type="text"
                addonBefore="user-star"
              />
              <Input
                placeholder="Ismingiz"
                type="text"
                addonBefore="user-gem"
              />
              <Input
                placeholder="Telefon raqamingiz"
                type="text"
                addonBefore="phone"
                id="phone-mask"
              />
              <Input
                placeholder="Parolni kiriting"
                type="password"
                addonBefore="lock"
                trailingIcon="hide"
              />
              <Input
                placeholder="Parolni takrorlang"
                type="password"
                addonBefore="lock-sync"
                trailingIcon="show"
              />
            </form>
            <InputCheck type="checkbox" id="terms" utils="mb-10">
              Saytdan foydalanish <a
                href="#!"
                data-modal-target="terms-cons"
                data-modal-toggle="terms-cons"
                class="text-primary underline">shartlariga</a
              > roziman
            </InputCheck>
            <a
              role="link"
              aria-disabled="true"
              href="#!"
              class="btn btn-primary btn-center">Ro‘yxatdan o‘tish</a
            >
          </div>
        </div>
        <div class="text-center">
          Akkountingiz bormi? <a
            href="/login/login"
            class="text-primary underline">Kirish</a
          >
        </div>
      </div>
    </div>
  </div>

