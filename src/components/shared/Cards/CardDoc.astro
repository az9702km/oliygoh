---
const { icon, xClasses } = Astro.props;
---

<div class="card card--doc" class:list={[xClasses]}>
  <div class="card__body">
    <svg class="icon card__icon">
      <use xlink:href=`#icon-${icon}`></use>
    </svg>
    <h4 class="card__title">
      <slot name="title" />
    </h4>
    <div class="card__action">
      <slot name="actions" />
    </div>
  </div>
</div>
